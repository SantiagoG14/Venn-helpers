{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES2022",
    "rootDir": "src",
    "moduleDetection": "force",
    "module": "Preserve",
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
